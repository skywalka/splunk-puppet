<view template="dashboard.html">
	<label>Module Statistics</label>

	<module name="AccountBar" layoutPanel="navigationHeader"/>
	<module name="AppBar" layoutPanel="navigationHeader"/>
	<module name="Message" layoutPanel="messaging">
		<param name="filter">*</param>
		<param name="clearOnJobDispatch">False</param>
		<param name="maxSize">1</param>
	</module>

	<module name="TitleBar" layoutPanel="viewHeader">
		<param name="actionsMenuFilter">dashboard</param>
	</module>

<module name="ServerSideInclude" layoutPanel="panel_row2_col1">
    <param name="src">puppet_statistics.html</param>
</module>

<module name="ServerSideInclude" layoutPanel="panel_row3_col1">
    <param name="src">puppet_statistics.html</param>
</module>

<module name="ServerSideInclude" layoutPanel="panel_row4_col1">
    <param name="src">puppet_statistics.html</param>
</module>

<module name="TimeRangePicker" layoutPanel="panel_row2_col1">
	   <param name="selected">Last 24 Hours</param>
		 <param name="searchWhenChanged">True</param>
     			
		 <!-- Top Ressources -->
		 <module name="HiddenSearch" layoutPanel="panel_row2_col1">
		    <param name="search">index="*" puppetd changed  NOT "*.rb"|rex field=_raw "\/\w+\[(?&lt;puressource&gt;\S+)\].*\).(?&lt;puchange&gt;\w+.\w+)" | head 3000 | fields hostname puressource puchange | top puressource limit=10</param>
				<param name="autoRun">true</param>	
        				
			  <!-- Top Ressources Chart -->
				<module name="GenericHeader"><param name="label">Puppet - Ressources changed</param></module>
				<module name="JobProgressIndicator" />
				<module name="HiddenChartFormatter">						
				   <param name="chart">pie</param>
				   <module name="FlashChart" >
					    <param name="width">100%</param>
							<param name="height">230px</param>
							<module name="ViewRedirectorLink">
							   <param name="viewTarget">flashtimeline</param>
								 <param name="label">View full results</param>
							</module>
						</module>
					</module>
					
					<!-- Top Ressources Table -->
					<module name="SimpleResultsTable"  layoutPanel="panel_row2_col2" />
				</module>
				</module>


<module name="TimeRangePicker" layoutPanel="panel_row3_col1">
       <param name="selected">Last 24 Hours</param>
         <param name="searchWhenChanged">True</param>
				
			<!-- What changed -->
      <module name="HiddenSearch" layoutPanel="panel_row3_col1">
		     <param name="autoRun">true</param>
		     <param name="search">index="*" puppetd changed  NOT "*.rb" |rex field=_raw "\/\w+\[(?&lt;puressource&gt;\S+)\].*\).(?&lt;puchange&gt;\w+.\w+)" | head 3000 | fields hostname puressource puchange | top puchange limit=10</param>
										
				 <!-- What changed Chart -->
			   <module name="GenericHeader"><param name="label">Puppet - What changed</param></module>
				 <module name="JobProgressIndicator" />
			   <module name="HiddenChartFormatter">
				    <param name="chart">pie</param>
						<module name="FlashChart" >
						   <param name="width">100%</param>
							 <param name="height">230px</param>
							 <module name="ViewRedirectorLink">
								  <param name="viewTarget">flashtimeline</param>
								  <param name="label">View full results</param>
							 </module>
						 </module>
				  </module>
					
					<!-- What changed Table -->
					<module name="SimpleResultsTable"  layoutPanel="panel_row3_col2" />				
		  </module>
          </module>

<module name="TimeRangePicker" layoutPanel="panel_row4_col1">
       <param name="selected">Last 24 Hours</param>
         <param name="searchWhenChanged">True</param>	
        
			<!-- Top hosts -->
      <module name="HiddenSearch" layoutPanel="panel_row4_col1">
		     <param name="autoRun">true</param>
		     <param name="search">index="*" puppetd changed  NOT "*.rb" |rex field=_raw "\/\w+\[(?&lt;puressource&gt;\S+)\].*\).(?&lt;puchange&gt;\w+.\w+)" | head 3000 | fields hostname puressource puchange | top hostname limit=10</param>
										
				 <!-- What changed Chart -->
			   <module name="GenericHeader"><param name="label">Puppet - Hosts with changes</param></module>
				 <module name="JobProgressIndicator" />
			   <module name="HiddenChartFormatter">
				    <param name="chart">pie</param>
						<module name="FlashChart" >
						   <param name="width">100%</param>
							 <param name="height">230px</param>
							 <module name="ViewRedirectorLink">
								  <param name="viewTarget">flashtimeline</param>
								  <param name="label">View full results</param>
							 </module>
						 </module>
				  </module>
					
					<!-- What changed Table -->
					<module name="SimpleResultsTable"  layoutPanel="panel_row4_col2" />				
		  </module>
	</module>
</view>
