<?xml version="1.0"?>
<view template="dashboard.html">
  <label>Overview</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>
  <module name="SearchSelectLister" layoutPanel="panel_row2_col1_grp1">
    <param name="label">Hosts</param>
    <param name="settingToCreate">host_setting</param>
    <param name="search">| `puppet_hosts_seen` |sort host</param>
    <param name="searchWhenChanged">True</param>
    <param name="searchFieldsToDisplay">
      <list>
        <param name="label">host</param>
        <param name="value">host</param>
      </list>
    </param>
    <module name="ConvertToIntention">
      <param name="settingToConvert">host_setting</param>
      <param name="intention">
        <param name="name">stringreplace</param>
        <param name="arg">
          <param name="host">
            <param name="fillOnEmpty">True</param>
            <param name="value">$target$</param>
          </param>
        </param>
      </param>
      <module name="TimeRangePicker" layoutPanel="panel_row2_col1_grp2">
        <param name="searchWhenChanged">True</param>
        <param name="selected">Last 15 Minutes</param>
        <module name="HiddenSearch">
          <param name="search">
              `puppet_agent_run_time($host$)`
          </param>
          <module name="HiddenPostProcess">
            <param name="search">dedup host| reltime</param>
            <module name="SingleValue" layoutPanel="panel_row2_col1_grp1">
                <param name="beforeLabel">Last run:</param>
              <param name="format">none</param>
              <param name="field">reltime</param>
            </module>
          </module>
        </module>
        <module name="HiddenSearch">
          <param name="search">host=$host$ eventtype=puppet_agent_error</param>
          <module name="HiddenPostProcess">
              <param name="search">stats count | rangemap field=count low=0-0 elevated=1-20 severe=21-10000 default=low</param>
            <module name="SingleValue" layoutPanel="panel_row2_col1_grp2">
                <param name="beforeLabel">Errors:</param>
                <param name="field">count</param>
                <param name="classField">range</param>
            </module>
          </module>
        </module>
        <module name="HiddenSearch">
          <param name="search">`puppet_agent_run_time($host$)`</param>
          <module name="HiddenPostProcess">
              <param name="search">rangemap field=catalog_run_time low=0-30 elevated=31-80 default=severe</param>

                <module name="SingleValue" layoutPanel="panel_row2_col1_grp1">
                    <param name="afterLabel">s</param>
                    <param name="beforeLabel">Runtime:</param>
                    <param name="field">catalog_run_time</param>
                    <param name="classField">range</param>
                </module>
            </module>
        </module>
        <module name="HiddenSearch">
          <param name="search">node=$host$  `puppet_version`| table version</param>
          <module name="SingleValue" layoutPanel="panel_row2_col1_grp2">
              <param name="beforeLabel">Version:</param>
            <param name="field">version</param>
            <param name="format">none</param>
          </module>
        </module>
      </module>
    </module>
  </module>
  <module name="HiddenSavedSearch" layoutPanel="panel_row2_col2" group="Puppet Errors By Host" autoRun="True">
    <param name="savedSearch">Puppet Errors By Host</param>
    <param name="groupLabel">Puppet Agent Errors By Host</param>
    <module name="ViewstateAdapter">
      <param name="savedSearch">Puppet Errors By Host</param>
      <module name="HiddenFieldPicker">
        <param name="strictMode">True</param>
        <module name="JobProgressIndicator">
          <module name="EnablePreview">
            <param name="enable">True</param>
            <param name="display">False</param>
            <module name="HiddenChartFormatter">
              <param name="chart">pie</param>
              <module name="FlashChart">
                <param name="width">100%</param>
                <module name="ConvertToDrilldownSearch">
                  <module name="ViewRedirector">
                    <param name="viewTarget">flashtimeline</param>
                  </module>
                </module>
              </module>
              <module name="ViewRedirectorLink">
                <param name="viewTarget">flashtimeline</param>
              </module>
            </module>
          </module>
        </module>
      </module>
    </module>
  </module>
</view>
